<div class="container">
  <div class="form-group">
    <%= form_for Recipe.new do |f| %>
      <%= f.label :name, "메뉴" %>
      <%= f.text_field :name, class: "form-control" %> <br> <br>
      <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name do |box| %>
        <% box.label(class: "checkbox input-checkbox") {box.check_box(class: "checkbox") + box.text} %>
      <% end %>
      <%= f.submit "등록", class: "btn btn-info" %>
    <% end %>
  </div>
</div>
